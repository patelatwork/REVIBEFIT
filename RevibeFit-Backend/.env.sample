# ──────────────────────────────────────────────────────────
# RevibeFit Backend – Environment Variables
# Copy this file to .env and fill in the values
# ──────────────────────────────────────────────────────────

# ─── Server ───────────────────────────────────────────────
PORT=8000
NODE_ENV=development

# ─── Database ─────────────────────────────────────────────
MONGODB_URI=mongodb://localhost:27017/revibe_fit

# ─── JWT ──────────────────────────────────────────────────
JWT_SECRET=
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRY=30d

# ─── CORS ─────────────────────────────────────────────────
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173

# ─── Admin Credentials ───────────────────────────────────
# IMPORTANT: Change these from defaults in production!
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=RevibeFit Admin

# ─── Email (SMTP) ────────────────────────────────────────
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=
EMAIL_FROM_NAME=RevibeFit

# ─── Google Gemini AI ────────────────────────────────────
GEMINI_API_KEY=

# ─── FatSecret API ───────────────────────────────────────
FATSECRET_CLIENT_ID=
FATSECRET_CLIENT_SECRET=

# ─── File Upload ─────────────────────────────────────────
MAX_FILE_SIZE=5242880